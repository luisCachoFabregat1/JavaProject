package Programa1;

import java.util.Scanner;

public class DiaSemanaSwitch {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		
		System.out.println("Escriba un dia de la semana (en minuscula)");

		String diasemana = sc.nextLine();
		
		switch(diasemana)
		{
			case "lunes","martes","miercoles","jueves","viernes":
				
			System.out.println(diasemana+" es un dia entre semana");
			
			diasemana=sc.nextLine();
			
			break;
			
			case "sabado","lunes":
				
			System.out.println(diasemana+ " es un dia de fin de semana");	
			
			diasemana=sc.nextLine();
			break;
			default: System.out.println("esta mal");
		}
 sc.close();
	}
}
